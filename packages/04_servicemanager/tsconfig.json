{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "strict": true,
        "newLine": "LF",
        "rootDir": "./src/",
        "outDir": "./"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
